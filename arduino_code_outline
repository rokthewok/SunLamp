time_t sunrise;
time_t sunset;
bool hasRisen = false;
bool hasSet = false;

SunCycle updateSun();
time_t syncClockAndSun();
void rise();
void set();

void setup() {
	setSyncProvider( syncClockAndSun );
}

void loop() {
	while( 1 ) {
		
		if( now() >= sunrise && !hasRisen ) {
			rise();
		}

		if( now() >= sunset && !hasSet ) {
			set();
		}

		if( hour() == 0 && hasRisen && hasSet ) {
			hasRisen = false;
			hasSet = false;
		}
	}
}

